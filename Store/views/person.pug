doctype html
html
    head
        include head
        title 个人中心
    body
        header(class=["mui-bar", "mui-bar-nav", ".mui-bar-transparent"])
            h1(class="mui-title") 个人中心
        nav(class=["mui-bar", "mui-bar-tab"])
            a(class="mui-tab-item" data-index="0" href="/")
                span(class=["mui-icon", "iconfont", "icon-shangcheng"])
                span(class="mui-tab-label") 网薪商城
            a(class="mui-tab-item" data-index="1" href="/order")
                span(class=["mui-icon", "iconfont", "icon-wodedingdan"])
                span(class="mui-tab-label") 我的订单
            a(class=["mui-tab-item","mui-active"] data-index="2" href="person")
                span(class=["mui-icon", "iconfont", "icon-gerenzhongxin"])
                span(class="mui-tab-label") 个人中心
        script.
            mui('.mui-bar-tab').on('tap', 'a', function () {
                console.log(this.getAttribute('href'));
                location.href = this.getAttribute('href');
            })
        div(class="mui-content")
            div(class="mui-row" style="margin: 0.325rem auto;padding: 0.725rem;")
                div(class="mui-col-xs-6")
                    img(src=person.url style=style="height: 6rem;padding-left: 3.125rem;")
                div(class="mui-col-xs-6")= person.name
                    p= person.money
            ul(class="mui-table-view")
                li(class="mui-table-view-cell")
                    a(class="mui-navigate-right") 消费记录
                li(class="mui-table-view-cell")
                    a(class="mui-navigate-right") 问题反馈
                li(class="mui-table-view-cell")
                    a(class="mui-navigate-right") 联系我们